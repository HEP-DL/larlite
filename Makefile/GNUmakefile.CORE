###################################################

# default target list

all: pre_build main_build 

pre_build:

ifndef NO_ROOTMAP
LOCAL_ROOTMAP=lib/$(SHLIB:.so=.rootmap)
ROOTMAP=$(LARLITE_LIBDIR)/$(SHLIB:.so=.rootmap)
main_build: .depend $(DICT).cxx lib/$(SHLIB) $(ROOTMAP) $(LARLITE_LIBDIR)/$(SHLIB)
else
main_build: .depend $(DICT).cxx lib/$(SHLIB)  $(LARLITE_LIBDIR)/$(SHLIB)
endif

# root class dictionary
$(DICT).cxx: $(HEADERS) LinkDef.h
	@echo '<< generating CINT >>'
	@rootcint -f $(DICT).cxx -c $(CINTFLAGS) $(INCFLAGS) $(HEADERS) LinkDef.h

# default rule for making .o files from .cxx files
%.o: %.cxx
	@echo '<< compiling' $< '>>'
	@$(CXX) $(CXXFLAGS) $(INCFLAGS) -c $<

# rule for making shareable library
lib/$(SHLIB): $(OBJECTS) $(DICT).o
	@echo '<< generating $(SHLIB) >>'
	@mkdir -p lib
	@$(SOMAKER) $(SOFLAGS) -o lib/$(SHLIB) $(filter-out $(DICT).o, $(OBJECTS)) $(DICT).o

# rule for making symlink in $(LARLITE_LIBDIR)
$(LARLITE_LIBDIR)/$(SHLIB): lib/$(SHLIB)
	@echo '<< installing $(SHLIB) >>'
	@ln -sf $(PWD)/lib/$(SHLIB) $(LARLITE_LIBDIR)

# if ROOTMAP defined, define rule for making it
ifndef NO_ROOTMAP
#ERROR_MESSAGE := $(error Executed)
$(ROOTMAP): $(LOCAL_ROOTMAP)
	@echo "<< installing rootmap >>"
	@ln -sf $(PWD)/lib/$(SHLIB:.so=.rootmap) $(LARLITE_LIBDIR)

$(LOCAL_ROOTMAP): lib/$(SHLIB)
	@echo "<< generating rootmap >>"
	@cd lib && ./gen_rootmap.sh

endif

###################################################

# "make clean" target
clean: pre_clean
	@echo '<< cleaning all >>'
	@rm -f $(DICT).* *.o lib*.so *~ .depend ./lib/*.o lib/lib*.so lib/lib*.rootmap $(LARLITE_LIBDIR)/$(SHLIB) $(LARLITE_LIBDIR)/$(SHLIB:.so=.rootmap)

pre_clean: 

###################################################
libclean:
	@echo '<< clearning lib directory >>'
	@rm -f $(LARLITE_LIBDIR)/$(SHLIB) 
	@rm -f lib/$(SHLIB) 

###################################################
clearCINT:
	@echo '<< removing CINT >>'
	@rm -f $(DICT).*


###################################################
# auto-generate dependencies using g++ -M
.depend: $(SOURCES) $(HEADERS)
	@#rm .depend
	@echo '<< checking dependencies >>'
	@$(CXX) -M $(CXXFLAGS) $(INCFLAGS) $(SOURCES) > .depend

-include .depend

